<section class="login">
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 border border-gray-500 p-16 rounded-md">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-500">
                    Sign in to your account
                </h2>
            </div>
            <form class="mt-8 space-y-6" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div class="pb-2">
                        <label for="email-address" class="sr-only">Email address</label>
                        <input id="email-address" name="email" type="email" autocomplete="email" required
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-500 rounded-t-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Email address">
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" autocomplete="current-password" required
                            class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-500 rounded-b-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Password">
                    </div>
                </div>
    
                <div class="container mx-auto flex items-center justify-between">
                    <button type="submit" class="group relative w-1/2 flex justify-center py-2 px-4 border border-transparent text-lg font-bold rounded-full btn-primary">
                        Sign in
                    </button>
                    <a href="/register" class="font-medium text-indigo-600 hover:text-indigo-500 font-bold">
                        Don't have account?
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>